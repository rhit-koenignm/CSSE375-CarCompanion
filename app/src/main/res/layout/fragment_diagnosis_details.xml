<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/fragment_diagnosis_details_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:textSize="40sp"
        android:textStyle="bold"
        android:text="@string/sample_diagnosis_title"
        android:textColor="@color/darkest_blue"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/darkest_blue"
        />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:padding="5dp"
        >

        <TextView
            android:id="@+id/fragment_diagnosis_detail_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/dark_teal"
            android:text="@string/sample_diagnosis_details"/>
    </ScrollView>


    <TextView
        android:id="@+id/current_troubleshooting_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/charcoal"
        android:text="@string/not_sure"
        android:autoSizeTextType="uniform"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:layout_below="@+id/troubleshooting_title"
        android:layout_marginBottom="20dp"
        />

    <Button
        android:id="@+id/back_to_troubleshooting_button"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/troubleshooting_return_button_text"
        android:layout_below="@id/button_layout"
        android:backgroundTint="@color/cerulean"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="10dp"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="20sp"
        />

</LinearLayout>

