<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/edit_page_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add a Car"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/nick_label_add"
        style="@style/CarAddLabels"
        android:text="@string/nickname"
        android:layout_below="@id/edit_page_title"/>

    <EditText
        android:id="@+id/car_nickname_et"
        style="@style/CarAddTexts"
        android:layout_below="@id/edit_page_title"/>

    <TextView
        android:id="@+id/car_year_label_add"
        style="@style/CarAddLabels"
        android:text="@string/year"
        android:layout_below="@+id/car_nickname_et"/>

    <EditText
        android:id="@+id/car_year_et"
        android:inputType="number"
        style="@style/CarAddTexts"
        android:layout_below="@+id/car_nickname_et"/>

    <TextView
        android:id="@+id/car_make_label_add"
        style="@style/CarAddLabels"
        android:text="Make:"
        android:layout_below="@+id/car_year_et"/>

    <EditText
        android:id="@+id/car_make_et"
        style="@style/CarAddTexts"
        android:layout_below="@+id/car_year_et"/>

    <TextView
        android:id="@+id/car_model_label_add"
        style="@style/CarAddLabels"
        android:text="Model:"
        android:layout_below="@+id/car_make_et"/>

    <EditText
        android:id="@+id/car_model_et"
        style="@style/CarAddTexts"
        android:layout_below="@+id/car_make_et"/>


    <Button
        android:id="@+id/btn_save_changes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/car_model_et"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:text="Save Changes"
        android:textSize="20sp" />

</RelativeLayout>